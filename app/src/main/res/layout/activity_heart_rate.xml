<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/login_bg"/>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_marginTop="40dp"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:tint="@color/white"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="BMI"
            android:textSize="19sp"/>

    </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/rl_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/tv_tz_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age："
                android:layout_marginTop="20dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/et_nl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_tz_title"
                android:layout_marginStart="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_et_bg"
                android:hint="enter your age"
                android:inputType="number"
                android:padding="5dp" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/et_nl"
                android:layout_toRightOf="@id/et_nl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=""/>

            <TextView
                android:id="@+id/tv_sg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_nl"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="Resting heart rate："
                android:textSize="20sp" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/et_xl"
                android:layout_marginStart="40dp"
                android:padding="5dp"
                android:background="@drawable/shape_et_bg"
                android:layout_below="@+id/tv_sg_title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="enter your heart rate"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/et_xl"
                android:layout_toRightOf="@id/et_xl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=""/>

            <Button
                android:id="@+id/bt_js"
                android:layout_below="@id/et_xl"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="@string/calculate"
                android:textAllCaps="false"
                android:backgroundTint="@color/color_money"
                android:background="@drawable/shape_tv_bg1"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/bt_js"
                android:id="@+id/desc_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/color_656565"
                android:layout_marginStart="15dp"
                android:text="@string/desc"/>
            <TextView
                android:layout_below="@id/desc_title"
                android:id="@+id/tv_desc_1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="1·The target heart rate refers to the ideal heart rate during exercise (i.e., heart beats per minute).
                Although it is not possible and necessary to precisely control the heart rate at the target heart rate during exercise, it is best to control it within the target heart rate range, which is beneficial to exercise without
                 excessive fatigue (i.e., moderate exercise)."
                android:layout_marginStart="15dp"
                />
            <TextView
                android:layout_below="@id/tv_desc_1"
                android:id="@+id/tv_desc_2"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="2.Resting heart rate refers to the number of heartbeats in one minute when you are completely relaxed. The best time to measure your resting heart rate is in the morning after a good night's sleep, before you get up. The average resting heart rate is 60-80 beats per minute. People with better physical fitness generally have lower resting heart rates. Resting heart rate usually increases with age."
                android:layout_marginStart="15dp"
                />
            <TextView
                android:layout_below="@id/tv_desc_2"
                android:id="@+id/tv_desc_3"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="3.Maximum heart rate refers to the highest number of beats per minute your heart can handle. Adults with health problems such as heart disease, asthma, high blood pressure or diabetes should consult a doctor before starting any exercise program and try to keep their heart rate at the lower end of their target heart rate range."
                android:layout_marginStart="15dp"
                />

        </RelativeLayout>
</RelativeLayout>
