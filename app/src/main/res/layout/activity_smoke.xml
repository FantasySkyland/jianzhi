<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/iv_top_bg"
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:background="@mipmap/login_bg"/>
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_marginTop="40dp"
        android:background="@color/transparent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:tint="@color/white"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="BMI"
            android:textSize="19sp"/>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="30dp"
        app:contentPaddingBottom="30dp"
        android:paddingBottom="30dp"
        android:layout_below="@id/rl_top"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">
            <TextView
                android:id="@+id/tv_start_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="When did you start smoking?"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_start_time"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_start_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:text="start time"/>
            <TextView
                android:id="@+id/tv_start_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/bt_start_time"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp" />
            <TextView
                android:layout_below="@id/bt_start_time"
                android:id="@+id/tv_end_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="When would you like to stop smoking?"
                android:textSize="20sp" />

            <Button
                android:id="@+id/bt_end_time"
                android:layout_marginTop="10dp"
                android:layout_below="@id/tv_end_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:text="end_time"/>
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/bt_end_time"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

            <TextView
                android:layout_below="@+id/bt_end_time"
                android:id="@+id/tv_smoke_times_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:text="How many cigarettes do you smoke on average per day："
                android:textSize="20sp" />

            <EditText
                android:layout_marginTop="10dp"
                android:id="@+id/et_smoke_times"
                android:layout_marginStart="40dp"
                android:padding="5dp"
                android:background="@drawable/shape_et_bg"
                android:layout_below="@+id/tv_smoke_times_title"
                android:layout_width="wrap_content"
                android:minWidth="200dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="enter the number of cigarettes smoked"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignTop="@id/et_smoke_times"
                android:layout_toRightOf="@id/et_smoke_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="次"/>

            <Button
                android:id="@+id/bt_js"
                android:layout_below="@id/et_smoke_times"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:text="@string/calculate"
                android:textAllCaps="false"
                android:backgroundTint="@color/purple_500"
                android:background="@drawable/shape_tv_bg1"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/bt_js"
                android:textSize="12sp"
                android:textAllCaps="false"
                android:text="This tool only provides a rough estimate of the actual damage caused by smoking. In addition to smoking, genetic factors, diet and exercise habits, and other lifestyle factors will affect the estimated results. In addition, this tool does not take into account the impact of long-term smoking on your quality of life and that of your family, including the cost of smoking, and the great pain and medical expenses caused by emphysema, heart disease and cancer caused by smoking."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
